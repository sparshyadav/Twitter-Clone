model User {
  id        Int     @id @default(autoincrement())
  firstname String
  lastname  String
  email     String  @unique
  password  String
  bio       String
  tweets    Tweet[]
}

model Tweet {
  id           Int       @id @default(autoincrement())
  title        String
  content      String
  createAt     DateTime  @default(now())
  user         User      @relation(fields: [userid], references: [id])
  userid       Int
  likecount    Int       @default(0)
  commentcount Int       @default(0)
  like         Like[]
  Comment      Comment[]
}

model Like {
  id      Int   @id @default(autoincrement())
  userid  Int
  tweetid Int
  tweet   Tweet @relation(fields: [tweetid], references: [id], onDelete: Cascade)
}

model Comment {
  id      Int    @id @default(autoincrement())
  userid  Int
  tweetid Int
  body    String
  tweet   Tweet  @relation(fields: [tweetid], references: [id], onDelete: Cascade)
}
